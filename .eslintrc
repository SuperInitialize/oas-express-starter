{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "parserOptions": {
    "tsconfigRootDir": "./src",
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended"
  ],
  "rules": {
    "no-console": "error",
    "sort-imports": "error",
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "always-multiline"],
    "camelcase": "error"
  },
  "ignorePatterns": [
    "dist",
    "db",
    "src/types"
  ]
}
