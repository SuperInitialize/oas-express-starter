{
  "name": "oas-express-starter",
  "version": "0.1.0-development",
  "description": "A starter template for an OpenAPI 3.0 compliant Express.js server.",
  "main": "dist/server.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha --file tests/unit/index.ts tests/unit/**/*.test.ts",
    "test:coverage": "nyc --report-dir .data/tests/unit/coverage --temp-dir .data/tests/unit/.nyc_output npm run test",
    "test-integration": "mocha --file tests/integration/index.ts tests/integration/**/*.test.ts",
    "test-integration:coverage": "nyc --report-dir .data/tests/integration/coverage --temp-dir .data/tests/integration/.nyc_output npm run test-integration",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/server.js",
    "start:watch": "nodemon dist/server.js",
    "watch": "concurrently -k \"npm run build:watch\"  \"npm run start:watch\""
  },
  "dependencies": {
    "@zishone/chaindler": "^0.1.1",
    "@zishone/dotnotate": "^0.1.3",
    "@zishone/jasenda": "^0.1.1",
    "@zishone/logan": "^0.1.4",
    "@zishone/monique": "^0.1.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "dotenv-defaults": "^2.0.1",
    "express": "^4.17.1",
    "express-openapi": "^7.2.0",
    "http-errors": "^1.8.0",
    "joi": "^17.3.0",
    "joi-to-swagger": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "migrate-mongo": "^8.1.4",
    "mongodb": "^3.6.3",
    "nanoid": "^3.1.18",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "saslprep": "^1.0.3",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.14",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.9",
    "@types/express-request-id": "^1.4.1",
    "@types/glob": "^7.1.3",
    "@types/http-errors": "^1.8.0",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/migrate-mongo": "^7.0.1",
    "@types/mocha": "^8.0.4",
    "@types/mongodb": "^3.5.34",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^14.14.10",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/sinon": "^9.0.9",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "glob": "^7.1.6",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "openapi-types": "^7.0.1",
    "prettier": "^2.2.1",
    "sinon": "^9.2.1",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zishone/oas-express-starter.git"
  },
  "author": "Zishran Garces <zishgarces@gmail.com> (https://github.com/zishone)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zishone/oas-express-starter/issues"
  },
  "keywords": [
    "openapi",
    "openapi3",
    "oas",
    "oas3",
    "express",
    "server",
    "rest",
    "starter",
    "template",
    "boilerplate",
    "typescript",
    "mongo",
    "mongodb"
  ]
}
