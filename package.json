{
  "name": "oas-express-starter",
  "version": "0.0.5",
  "description": "A starter template for an OpenAPI 3.0 compliant Express.js server.",
  "main": "dist/server.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "cleanup": "rimraf dist && rimraf coverage && rimraf .nyc_output",
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "mocha --require ts-node/register --require source-map-support/register --file test/index.ts test/**/*.test.ts --exit",
    "test:coverage": "nyc --reporter=lcov --include src npm run test",
    "start": "node dist/server.js",
    "start:watch": "nodemon dist/server.js"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.1",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.5",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "joi-openapi": "^0.1.8",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.2.1",
    "oas-tools": "^2.1.7",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "saslprep": "^1.0.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.27",
    "@types/chai": "^4.2.0",
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.1",
    "@types/hapi__joi": "^15.0.3",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/mocha": "^5.2.7",
    "@types/mongodb": "^3.3.1",
    "@types/node": "^12.7.3",
    "@types/passport": "^1.0.1",
    "@types/passport-jwt": "^3.0.1",
    "@types/sinon": "^7.0.13",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "felicity": "^5.0.1",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "sinon": "^7.4.2",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zishone/oas-express-starter.git"
  },
  "author": "Zishran Julbert Garces <zishgarces@gmail.com> (https://github.com/zishone)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zishone/oas-express-starter/issues"
  },
  "keywords": [
    "openapi",
    "openapi3",
    "oas",
    "oas3",
    "express",
    "server",
    "rest",
    "starter",
    "template",
    "boilerplate"
  ],
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript"
  }
}
